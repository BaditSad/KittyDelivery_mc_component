{
    "openapi": "3.0.0",
    "info": {
        "title": "Component Management API",
        "version": "1.0.0",
        "description": "API for managing components"
    },
    "paths": {
        "/api/mc_component": {
            "post": {
                "summary": "Create a new component",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Component"
                            },
                            "example": {
                                "component_name": "Footer",
                                "component_template": "<footer>{{ copyright }}</footer>"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Component created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Component"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request body"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            },
            "get": {
                "summary": "Retrieve all components",
                "responses": {
                    "200": {
                        "description": "List of components",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Component"
                                    }
                                }
                            }
                        }
                    },
                    "404": {
                        "description": "No components found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            },
            "put": {
                "summary": "Update an existing component",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "required": true,
                        "schema": {
                            "type": "string"
                        }
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/Component"
                            },
                            "example": {
                                "component_name": "Updated Header",
                                "component_template": "<header>{{ updated_title }}</header>"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Component updated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Component"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Invalid request body or parameters"
                    },
                    "404": {
                        "description": "Component not found"
                    },
                    "500": {
                        "description": "Server error"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "Component": {
                "type": "object",
                "properties": {
                    "_id": {
                        "type": "string"
                    },
                    "component_name": {
                        "type": "string"
                    },
                    "component_template": {
                        "type": "string"
                    }
                },
                "example": {
                    "_id": "609bdc1f1b155300152dcb2f",
                    "component_name": "Header",
                    "component_template": "<header>{{ title }}</header>"
                }
            }
        }
    }
}